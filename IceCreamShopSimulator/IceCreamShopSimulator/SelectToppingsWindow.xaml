        <Label x:Name="label6" Content="Fudge" HorizontalAlignment="Left" Margin="34,191,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label7" Content="Hot Peanut Butter
               " HorizontalAlignment="Left" Margin="34,217,0,0" VerticalAlignment="Top"/>
