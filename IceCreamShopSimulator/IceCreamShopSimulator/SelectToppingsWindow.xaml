        <Button x:Name="button6" Content="Add Topping" HorizontalAlignment="Left" Margin="207,223,0,0" VerticalAlignment="Top" Width="75" Click="button6_Click"/>
        <Button x:Name="button7" Content="Continue" HorizontalAlignment="Left" Height="27" Margin="207,252,0,0" VerticalAlignment="Top" Width="80" Click="button7_Click"/>
        <Button x:Name="button8" Content="Reset Toppings!" HorizontalAlignment="Left" Height="27" Margin="34,252,0,0" VerticalAlignment="Top" Width="96" Click="button8_Click"/>
